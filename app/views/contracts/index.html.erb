<%= page_title 'Latest Activity' %>

<div class="page_head">
  <h1>Contracts</h1>
</div>

<div class="issues list">
  <div class="issues">
    <%= render @contracts %>
  </div>
  <% if @contracts.empty? %>
    <p>There are no expired or upcoming service contract renewals.</p>
  <% end %>

  <div class="sidebar">
    <%= link_to 'Add a new contract', new_contract_path, :class => 'cta' %><br /><br />
    <%= link_to 'Add a new reminder', new_reminder_path, :class => 'cta' %><br /><br />
    <%= link_to 'Add a new PO', new_payment_order_path, :class => 'cta' %><br /><br />
  </div>
</div>
