<%= page_title "New reminder category" %>

<div class="page_head">
  <h1>New Reminder Category</h1>
</div>

<div class="new person">
  <%= form_for @reminder do |f| %>
    <%= render :partial => 'form', :locals => { :f => f } %>
    <p class="button"><%= f.submit "Create category", :disable_with => 'Saving changes' %> <%= link_to "Cancel", settings_path %></p>
  <% end %>
</div>
