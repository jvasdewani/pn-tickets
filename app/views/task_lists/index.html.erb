<%= page_title "Manage task lists" %>

<div class="page_head">
  <h1>Manage Task Lists</h1>
</div>

<div class="people list">
  <div class="people">
    <% @task_lists.each do |client, task_lists| %>
      <h1><%= !client.nil? ? client.company : 'General' %></h1>
      <%= render task_lists %>
    <% end %>
  </div>

  <div class="sidebar">
    <% if current_person.admin? %>
      <%= link_to "Create a new task list", new_task_list_path, class: 'cta' %>
    <% end %>
  </div>
</div>
