<% page_title "Please sign in" %>

<h2>Please sign in</h2>
<%= form_for @session do |f| %>
  <div class="field">
  	<%= f.text_field :username, :placeholder => 'Username' %>
  </div>
	<div class="field">
		<%= f.password_field :password, :placeholder => 'Password' %>
	</div>
  <p><%= f.submit "Sign in" %></p>
<% end %>
